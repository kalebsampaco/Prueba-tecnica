{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true
  },
  "include": [
      "src/**/*.ts", 
      "src/sub_process/*.js"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
